    var isAndroid = u.indexOf('Android') > -1 || u.indexOf('Adr') > -1;
    var isiOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/); 
    if(isiOS){
      this.isIos = true;
    }else{
      this.isIos = false;
    }
    let height = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
    if(height > 550){
      this.AppHeight = true;
    }
    if(CookieUtil.hasItem("uuid")) {
      this.getRemainder();
    }
  },
  methods:{
    hasApp(){
      this.howToGetChance = false;
      Toast({
        message:"Please operate on app",
        duration:1500,
      });
    },
    getRemainder(){
      Indicator.open({
        spinnerType: 'fading-circle'
      });
      let url = DomainManager.getObtainRemainingLottery();
      this.$axios.get(url).then(res =>{
        Indicator.close();
        if(res.succ){
          this.chances = res.data
        }else{
          Toast(res.msg);
        }
      }).catch(err => {
        Indicator.close();
        console.log(err);
      })
    },
    signIn(){
      if(!this.isLogin){
        try {
          window.heg.nativeSignIn();
        } catch (error) {emitCustomEvent('SignIn', 'AutumnSale');this.$router.push('/login');}
      }
    },
    signUp(){
      try {
        window.heg.nativeSignIn();
      } catch (error) {emitCustomEvent('SignUp', 'AutumnSale');this.$router.push('/register');}
    },
    jumpChild(who){
      emitCustomEvent(this.shares[who].name, 'AutumnSale');
      switch (who) {
        case 0:
          this.$router.push("/autumnrules");
          break;
        case 1:
          this.$router.push("/autumnintro");
          break;
        case 2:
